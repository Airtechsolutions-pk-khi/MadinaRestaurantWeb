<script>
    var qty = 1;

    $('#product-quantity').on('change', function () {
        qty = this.value;
    });

    function cartclick() {
        addtocart(@Model.ItemID, '@Model.Name', '@Model.Image',@Model.Price, qty,);
            toast('Item Added to Cart', 1);
    }

    function GotoCartPage() {
        window.location.href = '/order/cart/';
    }

    function submitReview() {
        debugger
        //var sim = $("input[type='radio']:checked").val();
        var review = new Object();
        review.Name = $('#Name').val();
        review.Email = $('#Email').val();
        review.Contact = 1;
        review.Description = $('#Description').val();
        review.StatusID = 1;
        //review.Stars = sim == undefined ? 0 : sim;
        review.Stars = null;
        review.ItemID = $('#HfItemId').val();

        var reviewData = JSON.stringify({ 'data': review });
        if (validate()) {
            $.ajax({
                type: "POST",
                url: '/Product/PostProductReview',
                data: reviewData,
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                success: function (data) {
                    console.log(data)
                    if (data == true) {
                        swal({
                            title: "Thank you !",
                            text: "For the Review !",
                            type: "success"
                        });
                        window.location.reload();
                    }
                    else {
                        swal({
                            title: "Thank you !",
                            text: "For the Review !",
                            type: "success"
                        });
                        window.location.reload();
                    }
                },
                error: function (xhr, textStatus, errorThrown) {

                }
            });
        }
    }
    function validate() {
        var flag = true;
        if ($("#Name").val() == '' || $("#Description").val() == '') {
            swal({
                title: "Error !",
                //text: "User Already Exist",
                type: "error",
                html: true,
                showCancelButton: false,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ok",
                closeOnConfirm: false,
            });
            flag = false;
        }
        return flag;
    }
   
</script>